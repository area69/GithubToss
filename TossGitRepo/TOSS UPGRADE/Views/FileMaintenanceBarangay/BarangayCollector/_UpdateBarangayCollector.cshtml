@model TOSS_UPGRADE.Models.FM_Barangay.FM_Barangay_BarangayName
@{
    DB_TOSSEntities SISDB = new DB_TOSSEntities();
}
@using TOSS_UPGRADE.Models;
@using (Ajax.BeginForm("UpdateCollectorName", "FileMaintenanceBarangay", new AjaxOptions { OnSuccess = "AngularGlobalAlertsCallingNoModal('FMBarangayController','Get_BarangayCollectorNameTable','Successfully Updated')", OnFailure = "OnFailure()", }))
{
    @Html.HiddenFor(m => m.getBarangayCollectorcolumns.BarangayCollectorID, new { })
    <div class="row black">
        <div class="col-md-3 pr-0 form-group">
            <label><b>First Name</b></label>
            @Html.TextBoxFor(m => m.getBarangayCollectorcolumns.FirstName, new { @class = "form-control", type = "text" })
        </div>
        <div class="col-md-3 pr-0 form-group">
            <label><b>Middle Name</b></label>
            @Html.TextBoxFor(m => m.getBarangayCollectorcolumns.MiddleName, new { @class = "form-control", type = "text" })
        </div>
        <div class="col-md-3 pr-0">
            <label><b>Last Name</b></label>
            @Html.TextBoxFor(m => m.getBarangayCollectorcolumns.LastName, new { @class = "form-control", type = "text" })
        </div>
        <div class="col-md-3">
            <div class="row">
                <div class="col-md-6 pr-0 form-group">
                    <label style="visibility:hidden">Position</label>
                    <button type="submit" class="btn bg-addbutton black form-control"><b>Update</b></button>
                </div>
                <div class="col-md-6 form-group">
                    <label style="visibility:hidden">Position</label>
                    <button type="reset" onclick="AngularGlobalEdit('FMBarangayController','Get_AddCollectorName','')" class="btn bg-headerbc white form-control"><b>Cancel</b></button>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(function () {
        LoadDataTable();
        LoadPopOver();
    })
</script>

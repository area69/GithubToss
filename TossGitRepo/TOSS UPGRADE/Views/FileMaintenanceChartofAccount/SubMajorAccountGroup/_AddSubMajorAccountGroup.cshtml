@model TOSS_UPGRADE.Models.FM_ChartOfAccounts.FM_ChartOfAccounts_SubMajorAccountGroup
@{
    DB_TOSSEntities TOSSDB = new DB_TOSSEntities();
}
@using TOSS_UPGRADE.Models;
<div class="col-md-12">
    <div class="row black">
        <div class="col-md-3" id="_SubMajorRevisionYearID">
        </div>
        <div class="col-md-6" id="_SubMajorAllotmentClassID">
        </div>
        <div class="col-md-3" id="_SubMajorAccountGroupNameID">
        </div>
    </div>
    <div class="row black">
        <div class="col-md-4" id="_DynamicMajorAccountGroupNameID">
        </div>
        <div class="col-md-4">
            <label class="mt-1"><b>Sub Major Account Group</b></label>
            <input type="text" class="form-control" name="name" value="" />
        </div>
        <div class="col-md-4 mt-1">
            <div class="row">
                <div class="col-md-7 pr-0">
                    <label class="black"><b>Account Code</b></label>
                    <div class="row">
                        <div class="col-md-6 pr-0" id="_DynamicSubMajorAccountCode1"></div>
                        <div class="col-md-2 px-0" id="_DynamicSubMajorAccountCode2"></div>  
                        <div class="col-md-4 pl-0">
                            @Html.TextBoxFor(m => m.getSubMajorAccountGroupcolumns.SubMajorAccountGroupCode, new { @class = "form-control", type = "text" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-md-8"></div>
        <div class="col-md-2">
            <button type="submit" class="btn bg-addbutton form-control black">
                <b>Add</b>
            </button>
        </div>
        <div class="col-md-2">
            <button type="reset" class="btn bg-headerbc form-control white">
                <b>Cancel</b>
            </button>
        </div>
    </div>
</div>

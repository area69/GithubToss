@model IEnumerable<TOSS_UPGRADE.Models.FM_Supplier.SupplierList>
@{
    DB_TOSSEntities SISDB = new DB_TOSSEntities();
}
@using TOSS_UPGRADE.Models;


<table class="table table-striped table-condensed table-bordered zero-configuration text-center dataTable table-smss-hover no-footer m-0 w-100">
    <thead class="text-center">
        <tr>
            <th>Company Name</th>
            <th>Company Address</th>
            <th>Telephone No.</th>
            <th>Owner's Name</th>
            <th width="5%">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var Items in Model)
            {
                var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                var DeleteSuccesMess = "Successfully Deleted";

                var ViewEdit = "<button class=\"btn btn-icon btn-block black bg-addbutton border-0\" type=\"button\" onclick=\"AngularGlobalEdit('FMSupplierController','Get_UpdateSupplier','" + @Items.SupplierID + "')\"><i class='ft-edit mr-1'></i><b>Edit</b></button>";
                var ViewDelete = "<button class=\"btn btn-icon white btn-block bg-headerbc  border-0\" type=\"button\" onclick=\"swalConfirmation('" + @DeleteConfirmationMess + "', '','" + @DeleteSuccesMess + "','AngularGlobalDelete(" + @Items.SupplierID + ",&quot;Get_DeleteSupplier&quot;,&quot;FMSupplierController&quot;)')\"> <i class='ft-delete mr-1'></i><b>Delete<b></button>";
                var ActionContentProgram = ViewEdit + ViewDelete;
                <tr>
                    <td>@Items.CompanyName</td>
                    <td>@Items.Address</td>
                    <td>@Items.TelNo</td>
                    <td>@Items.MFName</td>
                    <td>
                        <button type="button" onfocusout="PopoveLostFocus()" class="btn btn-sm btn-warning popover-trigger" data-toggle="popover" data-content="@ActionContentProgram" data-original-title="" data-html="true" data-placement="right"><i class="la la-bars"></i></button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>



<script>
    $(function () {
        LoadDataTable();
        LoadPopOver();
    })
</script>
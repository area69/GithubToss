@model IEnumerable<TOSS_UPGRADE.Models.AF_Description>
@{
    DB_TOSSEntities SISDB = new DB_TOSSEntities();
}
@using TOSS_UPGRADE.Models;

<div class="col-md-12">
    <div class="table-responsive">
        <table class="table table-striped table-bordered zero-configuration text-center dataTable scroll-horizontal table-smss-hover no-footer m-0 w-100">
            <thead>
                <tr>
                    <th>Description</th>
                    <th width="5%">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var Items in Model)
                    {
                        var DeleteConfirmationMess = "Are you sure do you want to delete this Description?";
                        var DeleteSuccesMess = "Description Deleted";

                        var ViewEdit = "<button class=\"btn btn-icon btn-block black bg-addbutton border-0\" type=\"button\" onclick=\"AngularGlobalEdit('FMAccountableFormController','Get_UpdateDescription','" + @Items.AFDescriptionID + "')\"><i class='la la-edit mr-1'></i><b>Edit</b></button>";
                        var ViewDelete = "<button class=\"btn btn-icon white btn-block bg-headerbc  border-0\" type=\"button\" onclick=\"swalConfirmation('" + @DeleteConfirmationMess + "', '" + @Items.DescriptionName + "','" + @DeleteSuccesMess + "','AngularGlobalDelete(" + @Items.AFDescriptionID + ",&quot;Get_DeleteDescription&quot;,&quot;FMAccountableFormController&quot;)')\"> <i class='ft-delete mr-1'></i><b>Delete<b></button>";
                        var ActionContentProgram = ViewEdit + ViewDelete;
                <tr>
                    <td>@Items.DescriptionName</td>
                    <td>
                        <button type="button" onfocusout="PopoveLostFocus()" class="btn btn-sm btn-warning popover-trigger" data-toggle="popover" data-content="@ActionContentProgram"
                                data-original-title="" data-html="true" data-placement="right">
                            <i class="la la-bars"></i>
                        </button>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


<script>

    $(function () {
        LoadDataTable();
        LoadPopOver();
    })
</script>



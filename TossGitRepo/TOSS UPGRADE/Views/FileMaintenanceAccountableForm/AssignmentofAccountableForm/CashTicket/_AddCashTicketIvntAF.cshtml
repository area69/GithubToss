@model TOSS_UPGRADE.Models.FM_AccountableForm.FM_AccountableFormAssignment
@{
    DB_TOSSEntities SISDB = new DB_TOSSEntities();
}
@using TOSS_UPGRADE.Models;
@Html.HiddenFor(m => m.AccountableFormAssignmentCashTicketValueID, new { id = "txtCashTicketValueCT" })
<div class="row">
    <div class="col-md-3 form-group">
        <label>Ending OR</label>
        @Html.TextBoxFor(m => m.AccountableFormAssignmentEndingORID, new { @class = "form-control", type = "text", @disabled = "disabled" })
    </div>
    <div class="col-md-3 form-group">
        <label>Stub No.</label>
        @Html.TextBoxFor(m => m.AccountableFormAssignmentStubNoID, new { @class = "form-control", type = "text", @disabled = "disabled" })
    </div>
    <div class="col-md-3 form-group">
        <label>Quantity</label>
        @Html.TextBoxFor(m => m.AccountableFormAssignmentQuantityID, new { @class = "form-control", type = "text", id = "txtQuantityCT", @disabled = "disabled" })
    </div>
    <div class="col-md-3 form-group">
        <label>Amount</label>
        @Html.TextBoxFor(m => m.AccountableFormAssignmentTotalAmountID, new { @class = "form-control", type = "text", id = "txtTotalAmountID", @readonly = "readonly" })
    </div>
</div>
<script>
    $(function () {
        TotalAmountValue();
    })
    function TotalAmountValue() {
        var res = parseFloat($("#txtQuantityCT").val()) * parseFloat($("#txtCashTicketValueCT").val());
        $("#txtTotalAmountID").val(res);
    }
</script>